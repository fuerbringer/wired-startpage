doctype html
html
  head
    title= cfgData.pageTitle
    if(cfgData.mergeFrontendFiles)
      style: include ../public/stylesheets/minified/master.min.css
    else
      link(rel='stylesheet', href='/stylesheets/minified/master.min.css')

    include favicon

  body
    .container: .row: .col-xs-12
      block content
    include overlays
    if(cfgData.mergeFrontendFiles)
      script: include ../public/javascripts/minified/master.min.js
    else
      script(src="/javascripts/minified/master.min.js")
