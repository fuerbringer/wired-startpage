extends layout

block content
  .row.header: .col-xs-12
    h1: span= cfgData.pageTitle
    p= cfgData.pageDescription

  .row.row-equal-height
    for row in rows
      for col, i in row
        div.column(class="col-xs-" + cfgData.bootstrapCols.xs + " col-sm-" + cfgData.bootstrapCols.sm + " col-md-" + cfgData.bootstrapCols.md + " col-lg-" + cfgData.bootstrapCols.lg)
          h2.column-title= col.name
          ol.column-list
            for page in col.pages
              li.column-entry: a(href=page.url)= page.title
